@model Author
@{
    ViewData["Title"] = "Add an Author";
}

<form class="form-width" asp-action="Add" asp-controller="Authors" method="post">
    
    <div class="form-group">
        <label asp-for="Name">Author Name</label>
        <input class="form-control" asp-for="Name" type="text" name="Name" />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Add Author</button>
    <br />
    <br />
    <a class="btn btn-danger" asp-controller="Authors" asp-action="Index">Cancel</a>
</form>